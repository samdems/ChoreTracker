<%- include('header') -%>

<div class="container mt-4">
  <h2>All Users</h2>
  <ul class="list-group">
    <% users.forEach(user => { %>
      <li class="list-group-item">
        <%= user.name %> - Total Debt: <%= user.totalDebt %>
        <form action="/users/<%= user.id %>?_method=DELETE" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-danger btn-sm ml-2">Delete</button>
        </form>
      </li>
    <% }) %>
  </ul>

  <h2>Add New User</h2>
  <form action="/users" method="POST">
    <div class="mb-3">
      <label for="name" class="form-label">Name:</label>
      <input type="text" id="name" name="name" class="form-control" required>
    </div>
    <div class="mb-3">
      <label for="totalDebt" class="form-label">Total Debt:</label>
      <input type="number" id="totalDebt" name="totalDebt" class="form-control" required>
    </div>
    <button type="submit" class="btn btn-primary">Add User</button>
  </form>
</div>

<%- include('footer') -%>
